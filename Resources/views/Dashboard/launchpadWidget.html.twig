{% extends 'OroDashboardBundle:Dashboard:widget.html.twig' %}

{% set widgetType = 'launchpad' %}

{% block content %}
    <div class="clearfix">
        <div class="image-wrap pull-left">
            <p class="text-center">
                {{ widget.label|trans }}
            </p>
            {% if widget.icon is defined and widget.icon %}
                <a href="javascript:void(0);" class="icon-{{ widget.icon }} widget-image"></a>
            {% endif %}
        </div>
        <div class="list-wrap pull-left">
            <ul class="nav nav-list">
                {% for link in widget.links %}
                    {%  if resource_granted(link.acl) %}
                    <li class="{{ loop.last ? 'last' : '' }}">
                        <a href="{{  link.url|raw }}" title="{{ link.label|trans }}">{{ link.label|trans }}</a>
                    </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
    {{ parent() }}
{% endblock %}
